FAKEIP_RANGE_V4=$FAKEIP_RANGE_V4
FAKEIP_RANGE_V6=$FAKEIP_RANGE_V6
EOF
    
    log_debug "Config cache saved"
}

# Load config from cache
load_config_cache() {
    if [ ! -f "$CACHE_CONFIG_FILE" ]; then
        log_debug "Config cache not found"
        return 1
    fi
    
    # Source the cache file
    set -a
    . "$CACHE_CONFIG_FILE"
    set +a
    
    log_debug "Config cache loaded"
    return 0
}

# Load kernel features from cache (direct source - no conversion needed)
load_kernel_cache() {
    if [ ! -f "$KERNEL_CACHE_FILE" ]; then
        log_debug "Kernel cache not found"
        return 1
    fi
    
    # Direct source - cache already uses KFEAT_* format
    # shellcheck disable=SC1090
    . "$KERNEL_CACHE_FILE"
    
    # Export for child processes
    export KFEAT_TPROXY KFEAT_OWNER KFEAT_MARK KFEAT_ADDRTYPE \
           KFEAT_CONNTRACK KFEAT_MAC KFEAT_IPSET KFEAT_IPV6_NAT
    
    log_debug "Kernel cache loaded"
    return 0
}


# ==============================================================================
# [ Cache Builder ]
# ==============================================================================

# Build all caches from source (Cold Boot Logic)
# Returns: 0 on success, 1 on failure
build_all_caches() {
    log_info "Building caches..."
    
    load_flux_config
    
    if ! validate_all; then
        log_error "Validation failed"
        prop_error "Validation failed"
        return 1
    fi
    
    . "$SCRIPT_DIR/flux.rules"
    save_kernel_cache
    load_kernel_cache
    save_config_cache
    save_rules_cache
    save_meta_cache
    
    log_info "Cache build complete"
    return 0
}
